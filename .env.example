# Medical Distribution Dashboard - Environment Variables

# ==================== DATABASE ====================
# Local SQLite database (for desktop app)
LOCAL_DATABASE_URL="file:./local.db"

# Remote PostgreSQL database (for web app)
DATABASE_URL="postgresql://user:password@localhost:5432/medical_db?schema=public"

# ==================== AUTHENTICATION ====================
NEXTAUTH_SECRET="your-super-secret-key-change-this"
NEXTAUTH_URL="http://localhost:3000"

# ==================== AI PROVIDERS ====================
# Google Gemini API
GEMINI_API_KEY="your-gemini-api-key"

# Groq API
GROQ_API_KEY="your-groq-api-key"

# OpenAI API (optional fallback)
OPENAI_API_KEY="your-openai-api-key"

# ==================== OCR PROVIDERS ====================
# AWS Textract (for scanned document OCR)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"

# Google Vision API (alternative OCR provider)
GOOGLE_VISION_API_KEY="your-google-vision-api-key"

# ==================== EMAIL SERVICE ====================
# SMTP configuration for email notifications
# Supports Gmail, Yahoo Mail, Outlook, or custom SMTP

# Yahoo Mail Example:
# EMAIL_HOST="smtp.mail.yahoo.com"
# EMAIL_PORT=587
# EMAIL_USER="your-email@yahoo.com"
# EMAIL_PASSWORD="your-app-password"  # Generate in Yahoo Account Security
# EMAIL_FROM="your-email@yahoo.com"

# Gmail Example:
# EMAIL_HOST="smtp.gmail.com"
# EMAIL_PORT=587
# EMAIL_USER="your-email@gmail.com"
# EMAIL_PASSWORD="your-app-password"  # Generate in Google Account Security

EMAIL_HOST="smtp.mail.yahoo.com"
EMAIL_PORT=587
EMAIL_USER="your-email@yahoo.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="your-email@yahoo.com"

# ==================== STORAGE ====================
# AWS S3 for document storage
S3_BUCKET_NAME="your-s3-bucket-name"
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID="your-s3-access-key"
S3_SECRET_ACCESS_KEY="your-s3-secret-key"

# ==================== REDIS ====================
# Redis for caching (optional)
REDIS_URL="redis://localhost:6379"

# ==================== LOGGING ====================
# Logging level
LOG_LEVEL="info"

# ==================== ELECTRON ====================
# Electron-specific settings
ELECTRON_IS_DEV=true

# ==================== SECURITY ====================
# CORS origins
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Session timeout (in minutes)
SESSION_TIMEOUT=30

# ==================== BUSINESS RULES ====================
# Default currency
DEFAULT_CURRENCY="KWD"

# Approval thresholds (in KWD)
AUTO_APPROVE_THRESHOLD=1000
MANAGER_APPROVE_THRESHOLD=10000
FINANCE_MANAGER_APPROVE_THRESHOLD=50000
CFO_APPROVE_THRESHOLD=100000

# Budget alert thresholds (percentages)
BUDGET_WARNING_THRESHOLD=80
BUDGET_CRITICAL_THRESHOLD=90