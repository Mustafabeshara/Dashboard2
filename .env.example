# Medical Distribution Dashboard - Environment Variables
# Optimized for Railway deployment and Electron standalone

# ==================== DATABASE ====================
# Local SQLite database (for Electron desktop app)
LOCAL_DATABASE_URL="file:./local.db"

# Remote PostgreSQL database (for Railway web app)
# Get this from Railway PostgreSQL service
DATABASE_URL="postgresql://user:password@localhost:5432/medical_db?schema=public"

# ==================== AUTHENTICATION ====================
NEXTAUTH_SECRET="your-super-secret-key-change-this"  # Generate with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"  # Change to Railway URL in production

# ==================== AI PROVIDERS (FREE TIER) ====================
# Priority 1: Groq (FREE - 14,400 requests/day, 30/min)
# Sign up at: https://console.groq.com/
GROQ_API_KEY="your-groq-api-key"

# Priority 2: Gemini (FREE - 1,500 requests/day, 15/min)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key"

# Priority 3: Google AI Studio (FREE - 1,500 requests/day, 15/min)
# Alternative to Gemini, same API
GOOGLE_AI_API_KEY="your-google-ai-api-key"

# Priority 4: Anthropic (PAID - Last resort fallback)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY="your-anthropic-api-key"

# ==================== OCR PROVIDER ====================
# Google Vision API (for scanned document OCR)
# Enable at: https://console.cloud.google.com/apis/library/vision.googleapis.com
# Create API key at: https://console.cloud.google.com/apis/credentials
GOOGLE_VISION_API_KEY="your-google-vision-api-key"

# ==================== EMAIL SERVICE ====================
# SMTP configuration for email notifications
# Supports Gmail, Yahoo Mail, Outlook, or custom SMTP

# Yahoo Mail Example:
EMAIL_HOST="smtp.mail.yahoo.com"
EMAIL_PORT=587
EMAIL_USER="your-email@yahoo.com"
EMAIL_PASSWORD="your-app-password"  # Generate in Yahoo Account Security
EMAIL_FROM="your-email@yahoo.com"

# Gmail Example (alternative):
# EMAIL_HOST="smtp.gmail.com"
# EMAIL_PORT=587
# EMAIL_USER="your-email@gmail.com"
# EMAIL_PASSWORD="your-app-password"  # Generate in Google Account Security
# EMAIL_FROM="your-email@gmail.com"

# ==================== STORAGE (OPTIONAL) ====================
# AWS S3 for document storage (optional, can use local storage)
S3_BUCKET_NAME="your-s3-bucket-name"
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID="your-s3-access-key"
S3_SECRET_ACCESS_KEY="your-s3-secret-key"

# ==================== REDIS (OPTIONAL) ====================
# Redis for caching (optional, Railway provides Redis add-on)
# Get from Railway Redis service
REDIS_URL="redis://localhost:6379"

# ==================== LOGGING ====================
# Logging level (debug, info, warn, error)
LOG_LEVEL="info"

# External logging service (optional)
# LOGGING_ENDPOINT="https://your-logging-service.com/api/logs"
# LOGGING_API_KEY="your-logging-api-key"

# ==================== ELECTRON ====================
# Electron-specific settings
ELECTRON_IS_DEV=true

# ==================== SECURITY ====================
# CORS origins (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Session timeout (in minutes)
SESSION_TIMEOUT=30

# ==================== BUSINESS RULES ====================
# Default currency
DEFAULT_CURRENCY="KWD"

# Approval thresholds (in KWD)
AUTO_APPROVE_THRESHOLD=1000
MANAGER_APPROVE_THRESHOLD=10000
FINANCE_MANAGER_APPROVE_THRESHOLD=50000
CFO_APPROVE_THRESHOLD=100000

# Budget alert thresholds (percentages)
BUDGET_WARNING_THRESHOLD=80
BUDGET_CRITICAL_THRESHOLD=90

# ==================== DEPLOYMENT ====================
# Railway-specific (set automatically by Railway)
# PORT=3000
# RAILWAY_ENVIRONMENT=production
# RAILWAY_PROJECT_ID=your-project-id
# RAILWAY_SERVICE_ID=your-service-id

# Application version
APP_VERSION="1.0.0"
